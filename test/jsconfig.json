{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "baseUrl": "./tests",
    "paths": {
      "*": ["tests/*"],
      "@scenario/*": ["scenarios/*"],
      "@page/*": ["pages/*"],
      "@schema/*": ["schemas/*"],
      "@helper/*": ["helpers/*"],
      "@data/*": ["data/*"],
      "@util/*": ["utils/*"]
    },
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["tests/**/*.js"],
  "exclude": ["node_modules"]
}
